<h1>Creating of new organisation by admin</h1>
<%= form_with(model: @account) do |form| %>
  <% if @account.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this organisation from being saved:</h2>

      <ul>
        <% @account.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label 'Organisation Name', style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div class="actions">
    <%= form.submit "Create", data: { turbo: false } %>
  </div>
<% end %>